<UserControl x:Class="ProductList.ProductItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductList"
             mc:Ignorable="d" d:DesignWidth="300" Margin="5" Height="39.332">
    <Border BorderThickness="1" BorderBrush="Black" Margin="0,0,0,17" >
        <StackPanel Background="White" Margin="0,0,0,-18">
            <Grid>
                <TextBlock x:Name="Title"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    MinHeight="10" MinWidth="100"
                    Margin="10" 
                    Text="Название"
                    FontSize="14"/>
                <TextBlock x:Name="Price"
                    FontWeight="Bold"
                    Text="Цена"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    MinWidth="50"
                    MinHeight="10" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
